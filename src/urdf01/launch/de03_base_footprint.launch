<launch>

    <!-- 设置参数 -->
    <param name="robot_description" textfile="$(find urdf01)/urdf/urdf/de04_base_footprint.urdf" />

    <!-- 启动 rviz -->
    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find urdf01)/config/show_mycar.rviz" />

    <!-- 
        只有上述两条语句：
            表现：设置头显示位置与颜色异常
            原因：rviz中显示urdf时，必须发布不同部件之间的坐标关系
            解决：ROS中提供了关于机器人模型显示的坐标发布相关节点（两个）
    -->

    <!-- 添加关节状态发布节点 -->
    <node pkg="joint_state_publisher" type="joint_state_publisher" name="joint_state_publisher" />
    <!-- 添加机器人状态发布节点 -->
    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" />
    <!-- 可选:用于控制关节运动的节点 -->
    <node pkg="joint_state_publisher_gui" type="joint_state_publisher_gui" name="joint_state_publisher_gui" />

</launch>
